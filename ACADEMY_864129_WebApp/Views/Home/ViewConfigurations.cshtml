@{
}
@model DeviceData

<div class="text-center">
    <h5 class="display-4">Send Information to IoT Device </h5>
</div>
<div class="clearfix" style="min-height:50px"></div>
@if (ViewBag.Alert)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Successfully Send the Data.</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="col-sm-6">
    <form asp-controller="Home" asp-action="SendData" method="post">
        <div class="form-group">
            <label>Device Id</label>
            @Html.DropDownListFor(m => m.DeviceId, (SelectList)ViewBag.Data, "Choose Device...", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Temperature</label>
            <input asp-for="Temperature" type="number" step="any" class="form-control" id="colFormLabelSm" placeholder="Enter Temperature Value" required>
        </div>
        <div class="form-group">
            <label>Humidity</label>
            <input asp-for="Humidity" type="number" step="any" class="form-control" id="colFormLabelSm" placeholder="Enter Humidity Value" required>
        </div>
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>

